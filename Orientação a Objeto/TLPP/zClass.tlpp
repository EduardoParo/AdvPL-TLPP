function u_TLPPUse() as undefined
	local oTLPP := Nil as object
	local cName := "" as string

	oTLPP := EduTLPP():New()

	oTLPP:__set("self:name","Eduardo Paro de Simoni")
    oTLPP:__set("self:idade",24)


	conout(oTLPP:__get("self:name"))

    oTLPP:destroi("self")

    conout(oTLPP:__get("self:name"))

	ConOut(cName)

return
